{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sharpshot",
  "version": "0.1.0",
  "identifier": "com.devsiko.sharpshot",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sharpshot",
        "minWidth": 850,
        "minHeight": 700,
        "maxWidth": 1000,
        "maxHeight": 800,
        "resizable": true,
        "devtools": false,
        "center": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
